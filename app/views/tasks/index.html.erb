<h1>Tasks List</h1>
<ol>
<% @tasks.each do |task| %>
<li>
<input type="checkbox" <%= task.completed ? 'checked' : "" %>>
Task: <%= link_to task[:title], task_path(task) %> |
<%= link_to "Delete", task_path(task),
    method: :delete,
    data: { confirm: "Are you sure?" } %>
</li>
<%end%>
</ol>
<p><%= link_to 'Create new task', new_task_path %></p>

